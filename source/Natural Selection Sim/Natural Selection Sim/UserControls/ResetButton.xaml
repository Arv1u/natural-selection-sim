<UserControl x:Class="Natural_Selection_Sim.UserControls.ResetButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Natural_Selection_Sim.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource RoundButtonStyle}" TargetType="Button"
               >
            
        </Style>
    </UserControl.Resources>
    <Grid>
        <Button Command="{Binding ResetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Path Margin="10" Stretch="Uniform" Stroke="Black" Fill="Black"
                  Data="
                  M 0 0
                  l 10 0
                  l 0 10
                  l -10 0
                  "/>
        </Button>
    </Grid>
</UserControl>
