<UserControl
    x:Class="Natural_Selection_Sim.UserControls.TablePercInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Natural_Selection_Sim.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Button.Background" Color="#3A3A3A" />
        <SolidColorBrush x:Key="Button.Foreground" Color="#E6E6E6" />

        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#444444" />
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#4A90C2" />

        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#2E2E2E" />
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#357ABD" />

        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#2A2A2A" />
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#3A3A3A" />
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#7A7A7A" />

        <ControlTemplate x:Key="IncreaseButtonTemplate" TargetType="{x:Type ButtonBase}">
            <Border
                x:Name="border"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="0,0,0,0"
                SnapsToDevicePixels="true">
                <ContentPresenter
                    x:Name="contentPresenter"
                    Margin="{TemplateBinding Padding}"
                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                    Focusable="False"
                    RecognizesAccessKey="True"
                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsDefaulted" Value="true">
                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="border" Property="Background" Value="{StaticResource Button.MouseOver.Background}" />
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.MouseOver.Border}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="border" Property="Background" Value="{StaticResource Button.Pressed.Background}" />
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Pressed.Border}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter TargetName="border" Property="Background" Value="{StaticResource Button.Disabled.Background}" />
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Disabled.Border}" />
                    <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource Button.Disabled.Foreground}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="Transparent" />
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="Transparent" />
        <ControlTemplate x:Key="TextBoxTemplate" TargetType="{x:Type TextBoxBase}">
            <Border
                x:Name="border"
                Background="{TemplateBinding Background}"
                BorderBrush="Transparent"
                BorderThickness="0"
                SnapsToDevicePixels="True">
                <ScrollViewer
                    x:Name="PART_ContentHost"
                    Focusable="false"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Hidden" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter TargetName="border" Property="Opacity" Value="0.56" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TextBox.MouseOver.Border}" />
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="true">
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TextBox.Focus.Border}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="TextblockStyle" TargetType="{x:Type Border}">
            <Style.Triggers>

                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#8F999D" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />

        </Grid.ColumnDefinitions>


        <Border Grid.Column="2" BorderThickness="0,0,1,0">
            <Button
                Name="IncreaseButton"
                Margin="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{DynamicResource Button.Background}"
                Click="IncreaseButton_Click"
                Content="+"
                FontSize="14"
                FontWeight="Bold"
                Foreground="{DynamicResource Button.Foreground}"
                Template="{DynamicResource IncreaseButtonTemplate}" />
        </Border>
        <Button
            Name="DecreaseButton"
            Grid.Column="3"
            Margin="0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="{DynamicResource Button.Background}"
            Click="DecreaseButton_Click"
            Content="−"
            FontSize="14"
            FontWeight="Bold"
            Foreground="{DynamicResource Button.Foreground}"
            Template="{DynamicResource IncreaseButtonTemplate}" />

        <Border Grid.Column="0" BorderThickness="0,0,1,0">

            <TextBox
                
                Margin="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Template="{DynamicResource TextBoxTemplate}"
                Text="{Binding DisplayValue, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                PreviewTextInput="TextBox_PreviewTextInput" 
                TextChanged="TextBox_TextChanged"
                GotKeyboardFocus="TextBox_GotFocus"
                PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
        </Border>
        <Border Grid.Column="1" Style="{StaticResource TextblockStyle}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Text="%"
                TextAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
