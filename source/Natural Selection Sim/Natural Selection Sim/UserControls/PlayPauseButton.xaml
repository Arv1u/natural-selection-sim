<UserControl
    x:Class="Natural_Selection_Sim.UserControls.PlayPauseButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Natural_Selection_Sim.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  https://learn.microsoft.com/en-us/dotnet/desktop/wpf/graphics-multimedia/path-markup-syntax  -->
    <UserControl.Resources>
        <Style TargetType="Path">
            <Setter Property="Fill" Value="Black" />
            <Setter Property="Stroke" Value="Black" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRunning, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                    <!--Pause sign-->
                    <Setter Property="Data" Value=" M 0 0  l 10 0 l 0 -20 l -10 0 l 0 20 M 15 0 l 10 0 l 0 -20 l -10 0 l 0 20" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRunning, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                    <!--Play sign-->
                    <Setter Property="Data" Value="M 0 0l 10 5l -10 5" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRunning, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                    <Setter Property="Command" Value="{Binding PlayCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRunning, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                    <Setter Property="Command" Value="{Binding PauseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Button>
            <Path Stretch="Uniform" Margin="10"/>
        </Button>
    </Grid>
</UserControl>
