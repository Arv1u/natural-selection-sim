<UserControl x:Class="Natural_Selection_Sim.UserControls.TableNumInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Natural_Selection_Sim.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Name="IncreaseButton" Content="+" Click="IncreaseButton_Click"  />
            <Button Name="DecreaseButton" Content="-" Grid.Row="2" Click="DecreaseButton_Click" />
        </Grid>
        <TextBox PreviewTextInput="TextBox_PreviewTextInput"
                 Text="{Binding IntInput, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
