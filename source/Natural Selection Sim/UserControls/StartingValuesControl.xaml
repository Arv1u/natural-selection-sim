<UserControl
    x:Class="Natural_Selection_Sim.UserControls.StartingValuesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Natural_Selection_Sim.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CheckBox
            Name="IsEnabledCheckbox"
            Grid.Column="0"
            Margin="0,0,0,10"
            VerticalAlignment="Center"
            IsChecked="{Binding StartingValuesIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <TextBlock
            Grid.Column="1"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            d:Text="TestHeader"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Text="{Binding PopulationName, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="1"
                Grid.RowSpan="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BorderBrush="White" />
            <local:TableHeader x:Name="TopLeftBordersHeader" HeaderName=" " />
            <local:TableHeader Grid.Column="2" HeaderName="Startingvalue" />
            <local:TableHeader Grid.Row="1" HeaderName="Population" />
            <local:TableHeader Grid.Row="2" HeaderName="Birthrate" />
            <local:TableHeader Grid.Row="3" HeaderName="Deathrate" />
            <local:TableHeader Grid.Row="4" HeaderName="Mutationrate" />
            <local:TableHeader Grid.Row="5" HeaderName="Speed" />
            <local:TableHeader Grid.Row="6" HeaderName="Size" />
            <Border
                Grid.Row="1"
                Grid.RowSpan="6"
                Grid.Column="1"
                BorderBrush="White"
                BorderThickness="0,0,1,1" />
            <Border
                Grid.Row="1"
                Grid.Column="1"
                BorderThickness="1,1,1,1">
                <local:TableIntInput IntValue="{Binding PopulationStart, Mode=TwoWay}" IsEnabled="{Binding StartingValuesIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="1"
                BorderThickness="1,0,1,1">
                <local:TablePercInput IsEnabled="{Binding StartingValuesIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" PercentValue="{Binding BirthRateStart, Mode=TwoWay}" />
            </Border>
            <Border
                Grid.Row="3"
                Grid.Column="1"
                BorderThickness="1,0,1,1">
                <local:TablePercInput IsEnabled="{Binding StartingValuesIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" PercentValue="{Binding DeathRateStart, Mode=TwoWay}" />
            </Border>
            <Border
                Grid.Row="4"
                Grid.Column="1"
                BorderThickness="1,0,1,1">
                <local:TablePercInput IsEnabled="{Binding StartingValuesIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" PercentValue="{Binding MutationRateStart, Mode=TwoWay}" />
            </Border>
            <Border
                Grid.Row="5"
                Grid.Column="1"
                BorderThickness="1,0,1,1">

                <local:TableIntInput IntValue="{Binding SpeedStart, Mode=TwoWay}" IsEnabled="{Binding StartingValuesIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Border>
            <Border
                Grid.Row="6"
                Grid.Column="1"
                BorderThickness="1,0,1,1">
                <local:TableIntInput IntValue="{Binding SizeStart, Mode=TwoWay}" IsEnabled="{Binding StartingValuesIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
